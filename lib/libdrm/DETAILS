          MODULE=libdrm
         VERSION=2.4.104
          SOURCE=$MODULE-$VERSION.tar.xz
      SOURCE_URL=https://dri.freedesktop.org/libdrm/
      SOURCE_VFY=sha256:d66ad8b5c2441015ac1333e40137bb803c3bde3612ff040286fcc12158ea1bcb
